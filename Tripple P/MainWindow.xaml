<Window x:Class="Tripple_P.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Tripple_P"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="{DynamicResource MaterialDesignDarkBackground}">
    <Grid>
        <TabControl Background="{DynamicResource MaterialDesignDarkBackground}">
            <!-- Planning Tab -->
            <TabItem Header="Planning">
                <TabControl TabStripPlacement="Bottom">
                    <TabItem Header="Brainstorm" Background="{DynamicResource MaterialDesignDarkBackground}">
                        <Grid Margin="5,5,5,5">
                            <!-- Grid Definitions -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1" MinHeight="75"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <!-- Project Description -->
                            <Label x:Name="ProjectDescriptionHeader" Content="Project Description" Grid.Row="0" Grid.Column="0" VerticalContentAlignment="Center" />


                            <TextBox Name="ProjectDescription" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" TextWrapping="WrapWithOverflow" BorderBrush="#FF050303" BorderThickness="0,1,1,1"/>

                            <!-- Features -->
                            <Label x:Name="FeaturesHeader" Content="Features" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalContentAlignment="Center" BorderBrush="Black" BorderThickness="1,0,0,1"/>
                            <DataGrid Name="FeaturesList" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" SelectionChanged="FeaturesList_SelectionChanged_1"/>
                            <!-- Add items here -->


                            <!-- Goals -->
                            <Label x:Name="GoalsHeader" Content="Goals" Grid.Row="1" Grid.Column="2" HorizontalContentAlignment="Center" BorderBrush="Black" BorderThickness="1,0,1,1"/>
                            <TextBox Name="Goals" Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" BorderThickness="1,0,1,1">
                                <TextBox.BorderBrush>
                                    <SolidColorBrush Color="Black" Opacity="1"/>
                                </TextBox.BorderBrush>
                            </TextBox>
                        </Grid>
                    </TabItem>
                </TabControl>
                <!-- Sub-Tabs will go here -->
            </TabItem>

            <!-- Progress Tab -->
            <TabItem Header="Progress">
                <!-- Sub-Tabs will go here -->
            </TabItem>

            <!-- Production Tab -->
            <TabItem Header="Production">
                <!-- Sub-Tabs will go here -->
            </TabItem>
        </TabControl>
    </Grid>
</Window>
